<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>

<body>

  <div class="login-page">
    <div class="login-card">

      <% if (errors) { %>
        <% const errArr=errors.split(";"); %>
          <div style="color:red; margin: 10px 0;">
            <% for (let i=0; i < errArr.length; i++) { %>
              <div>
                <%= errArr[i] %>
              </div>
              <% } %>
          </div>
          <% } %>


            <h1 class="login-title">Login</h1>

            <form action="/login" method="post" class="login-form">

              <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" class="form-input input-email" placeholder="Enter your email">
              </div>

              <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-input input-password"
                  placeholder="Enter your password">
              </div>

              <div class="form-actions">
                <button type="submit" class="btn-login">
                  Login
                </button>
              </div>
            </form>
            <div class="form-footer">
              <a href="/register" class="link-register">
                Don't have an account yet?
              </a>
            </div>
    </div>
  </div>

</body>

</html>