<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/styles/register.css">
  <style>
    .role-buttons button {
      margin-right: 10px;
      padding: 10px 20px;
      cursor: pointer;
    }

    .register-form {
      display: none;
      margin-top: 20px;
    }


  </style>
</head>

<body>

  <div class="register-page">
    <div class="register-card">

      <h1 class="register-title">Register</h1>
      <% if (errors) { %>
        <% errors = errors.split(";") %>
        <% errors.forEach(error => { %>
           <p style="color: red;"><%= error %></p>
        <% }) %>
       <% } %>
      <div class="role-buttons">
        <button type="button" class="btn-customer" onclick="showForm('customer')">Customer</button>
        <button type="button" class="btn-technician" onclick="showForm('technician')">Technician</button>
      </div>

      <form id="form-customer" action="/register" method="post" class="register-form">
        <input type="hidden" name="role" value="customer">

        <div class="form-group">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-input" placeholder="Enter your name">
        </div>

        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-input" placeholder="Enter your email">
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" class="form-input" placeholder="Enter your password">
        </div>

        <button type="submit" class="btn-register">Register as Customer</button>
      </form>

      <form id="form-technician" action="/register" method="post" class="register-form">
        <input type="hidden" name="role" value="technician">

        <div class="form-group">
          <label class="form-label">Name</label>
          <input type="text" name="name" class="form-input" placeholder="Enter your name">
        </div>

        <div class="form-group">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-input" placeholder="Enter your email">
        </div>

        <div class="form-group">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-input" placeholder="Enter your password">
        </div>

        <div class="form-group">
          <label class="form-label">Company</label>
          <input type="text" name="companyName" class="form-input" placeholder="Enter your Company Name">
        </div>

        <div class="form-group">
          <label class="form-label">Address</label>
          <input type="text" name="address" class="form-input" placeholder="Enter your adress">
        </div>
        <button type="submit" class="btn-register">Register as Technician</button>
      </form>

    </div>
  </div>

  <script>
    function showForm(role) {
      document.getElementById('form-customer').style.display = (role === 'customer') ? 'block' : 'none';
      document.getElementById('form-technician').style.display = (role === 'technician') ? 'block' : 'none';
    }
  </script>
</body>
</html>