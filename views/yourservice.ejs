<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Technician Services</title>
  <link rel="stylesheet" href="/styles/yourservice.css">
</head>

<body>

  <div class="services-page">
    <h1 class="services-title">Layanan Anda</h1>
    <table class="services-table" border="1" cellpadding="10">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama Jasa</th>
          <th>Harga</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((el, i)=> { %>
          <tr>
            <td>
              <%= i + 1 %>
            </td>
            <td>
              <%= el.name %>
            </td>
            <td>
              <%= currency.formatIDR(el.price) %>
            </td>
            <td>
              <form action="services/delete" method="post" style="display:inline;">
                <input type="hidden" name="serviceId" value="<%= el.id %>">
                <button type="submit" class="btn-delete">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <div class="add-service-section">
      <h2 class="add-service-title">Tambah Jasa Baru</h2>
      <form action="services/add" method="post" class="add-service-form">

        <div class="form-group">
          <% let jasa=["Cuci AC", "Isi Freon" , "Bongkar Pasang" ,"Cek Kebocoran"] %>
            <label class="form-label">Nama Jasa</label>
            <select name="name" class="form-input" required>
              <option value="" disabled selected>Pilih jasa</option>

              <% available.forEach(function(item){ %>
                <option value="<%= item.name %>">
                  <%= item.name %> - <%= currency.formatIDR(item.price) %>
                </option>
                <% }) %>
            </select>

        </div>

        <button type="submit" class="btn-add-service">Tambah Jasa</button>
      </form>
    </div>
  </div>
</body>

</html>